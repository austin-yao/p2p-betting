generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Bet {
  id Int @id @default(autoincrement())
  bet_id String @unique
  creator String?
  acceptor String?
  question String?
  for_amount Int?
  against_amount Int?
  agreed_by_both Boolean @default(false)
  game_start_time String?
  game_end_time String?
  status Int @default(4)
  create_time String?
  sent_to_oracle Boolean @default(false)
  winner String?
}

model Cursor {
  id String @id
  eventSeq String
  txDigest String
}